.m-auto {
  margin: auto;
}

.full-width {
  width: 100%;
}

.default-background-color {
  background-color: #1F1F21;
}

.default-color {
  color: #E2FC04;
}

.default-hr {
  border: .5px solid #E2FC04;
}

.text-decoration-none, .text-decoration-none:hover, .text-decoration-none:active,
  .text-decoration-none:visited, .text-decoration-none:focus {
    text-decoration: none;
}

.font-weight-bold {
  font-weight: bold;
}

.card-image {
  object-fit: cover;
  height: 15rem;
  width: 24.5rem;
}

.m-half {
  margin: 0.5rem;
}

.pv-1 {
  padding: 1rem !important;
}

.text-center {
  text-align: center;
}

.view-btn {
  width: 24.5rem;
  border: 1px solid #E2FC04;
  font-size: 1.2rem;
}

.full-unstyled-link {
  font-family: Oswald, sans-serif;
  font-size: 2rem;
}
