{%- if customer != blank -%}
  {% assign customer_id_tag = customer.id | prepend: 'customer_id:' | append: ':' %}

  {%- if product.tags contains customer_id_tag -%}
    {% include 'advice-wishlist-form' with method: 'delete', button_text: '<%= I18n.t('shopify.assets.wishlist_buttons.remove') %>' %}
  {%- else  %}
    {% include 'advice-wishlist-form' with method: 'put', button_text: '<%= I18n.t('shopify.assets.wishlist_buttons.add') %>', pass_customer_details: true %}
  {%- endif -%}
{%- endif -%}
